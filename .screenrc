startup_message off
shell -$SHELL
hardstatus on
hardstatus lastline '%H:  %-Lw%34>[%n*%f %t]%+Lw'
escape ^\\\
bindkey ^Q command
bindkey ^Z command
defnonblock on
defscrollback 1024
defflow off
windowlist string "%3n %{= dd}%?%h%:%t%?%=%f%{-}"
caption    string "%?%F%{y}%?%3n %{= wk}%?%h%:%t%?%{-}"
activity "Activity in window %n (%t)^G^G"
bell_msg "Bell in window %n (%t)^G"

bind  K kill
bind  z stuff ^Z
bind  ` select 0
