# vim:set ft=sh sw=2 sts=2:

git_bundle() {
  (
  cd ~/.vim
  if [ -d "$1" ]; then
    echo "Updating $1"
    cd ~/.vim/$1 && git pull --rebase
  else
    echo "Adding $1"
    cd ~/.vim/bundle && git clone $2
  fi
  )
}

