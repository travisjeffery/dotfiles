svn_bundle() {
  (
  cd ~/.vim
  if [ -d "$1" ]; then
    echo "Updating $1"
    cd ~/.vim/$1 && git svn pull
  else
    echo "Adding $1"
    cd ~/.vim/bundle && git svn clone $2 $3
  fi
  )
}

svn_bundle bundle/web-indent http://web-indent.googlecode.com/svn/trunk/ web-indent

cd ~/.vim

#git submodule update
