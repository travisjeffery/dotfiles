# vim:set ft=sh sw=2 sts=2:

clean_bundles() {
  rm -rf ~/.vim/bundle/*
}

git_bundle() {
  (
  cd ~/.vim
  if [ -d "$1" ]; then
    echo "Updating $1"
    cd ~/.vim/$1 && git pull --rebase
  else
    echo "Adding $1"
    cd ~/.vim && git clone $2 $1
  fi
  )
}

svn_bundle() {
  (
  cd ~/.vim
  if [ -d "$1" ]; then
    echo "Updating $2"
    cd ~/.vim/$1 && git svn rebase
  else
    echo "Adding $2"
    cd ~/.vim && git svn clone $2 $1
  fi
  )
}

